@inherits LayoutComponentBase

@inject IJSRuntime JS

<div class="page">
	<div class="sidebar">
		<NavMenu />
	</div>

	<div>
		<div class="content p-4">
			@Body
		</div>
	</div>
</div>

@code
{
	protected override async Task OnAfterRenderAsync(bool firstRender)
	{
		if (firstRender)
		{
			await JS.InvokeVoidAsync("addTooltips");
		}
	}
}
