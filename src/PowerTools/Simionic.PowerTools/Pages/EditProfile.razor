@page "/editprofile"

@using Simionic.Core
@using Simionic.CustomProfiles.Editor;

<div class="justify-content-center"><h3>Profile Editor</h3></div>
<div class="container py-3 bg-dark bg-opacity-25 rounded-3">
    <div class="row justify-content-center">
        <ProfileEditor @bind-ProfileData="@ProfileData" CanEdit="true" Editing="true" />
    </div>
</div>

@code {

    public Profile ProfileData { get; set; }

    protected override Task OnInitializedAsync()
    {
        WindowManager.Resize(1280, 1024);

        ProfileData = new Profile();
        ProfileData.Name = "Test Profile";

        return base.OnInitializedAsync();
    }
}
