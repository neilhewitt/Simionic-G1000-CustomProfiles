<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Simionic.CustomProfiles.MAUI.MainPage"
             BackgroundColor="{DynamicResource SecondaryColor}"
             WidthRequest="800" HeightRequest="400">

    <ScrollView>
        <Grid RowSpacing="25" RowDefinitions="100,100,100,100" ColumnDefinitions="150,300,150"
              Padding="{OnPlatform iOS='30,60,30,30', Default='10'}" HorizontalOptions="Fill">
            <Label Grid.Row="0" Grid.Column="0">Column 0 Row 0</Label>
            <Label Grid.Row="0" Grid.Column="1">Column 1 Row 0</Label>
            <Label Grid.Row="0" Grid.Column="2">Column 2 Row 0</Label>
        </Grid>
    </ScrollView>
</ContentPage>
