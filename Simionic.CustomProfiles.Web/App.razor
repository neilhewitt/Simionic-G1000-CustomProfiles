@using Simionic.CustomProfiles.Web.Pages
<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(Program).Assembly" PreferExactMatches="@true">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <Authorizing>
                    <Index ShowSearch="false" Headline="Checking..." StrapLine="Please wait while we check some details." />
                </Authorizing>
                <NotAuthorized>
                    @if (!context.User.Identity.IsAuthenticated)
                    {
                        <RedirectToLogin />
                    }
                    else
                    {
                        <p>You are not authorized to access this resource.</p>
                    }
                </NotAuthorized>
            </AuthorizeRouteView>
        </Found>
        <NotFound>
            <LayoutView Layout="@typeof(MainLayout)">
                <Index ShowSearch="false" Headline="Page not found" StrapLine="Sorry, the page you requested was not found." />
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>
