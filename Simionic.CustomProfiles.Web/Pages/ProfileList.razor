@page "/profiles"
@inject NavigationManager Navigation

<section class="py-5">
    <div class="container px-5 my-5">
        <div class="row gx-5 justify-content-center">
            <div class="col-md-auto">
                <div class="text-center">
                    @if (!String.IsNullOrWhiteSpace(_ownerId))
                    {
                        <h2 class="fw-bolder">@(UserInfo.Name)'s profiles</h2>
                    }
                    else if (!String.IsNullOrWhiteSpace(_searchTerm))
                    {
                        <h2 class="fw-bolder">Search results</h2>
                    }
                    else
                    {
                        <h2 class="fw-bolder">Browse profiles</h2>
                    }
                    <div class="text-center"><label for="search-box" class="form-label text-black font-weight-bold">Filter: <input class="input-text" type="text" id="search-box" @bind="_searchTerm" @bind:event="oninput" /></label></div>
                    <div class="btn-group">
                        <button class="btn btn-large @GetButtonState() mt-1 mb-4 shadow-none" @onclick="() => FilterType()">All</button>
                        @foreach(AircraftType type in Enum.GetValues<AircraftType>())
                        {
                          <button class="btn btn-large @GetButtonState(type) mt-1 mb-4 shadow-none" @onclick="() => FilterType(type)">@type</button>  
                        }
                    </div>
                    <div class="btn-group">
                        <button class="btn btn-large @GetButtonState(EngineFilter.Both) mt-1 mb-4 shadow-none" @onclick="() => FilterEngine(EngineFilter.Both)">Both</button>
                        <button class="btn btn-large @GetButtonState(EngineFilter.Single) mt-1 mb-4 shadow-none" @onclick="() => FilterEngine(EngineFilter.Single)">Single</button>
                        <button class="btn btn-large @GetButtonState(EngineFilter.Twin) mt-1 mb-4 shadow-none" @onclick="() => FilterEngine(EngineFilter.Twin)">Twin</button>
                    </div>
                    @if (UserInfo.OwnerId != null)
                    {
                        <div class="btn-group ml-1">
                            <button class="btn btn-large @GetButtonState(_ownerId == null) mt-1 mb-4 shadow-none" @onclick="() => _ownerId = null">All</button>
                            <button class="btn btn-large @GetButtonState(_ownerId != null) mt-1 mb-4 shadow-none" @onclick="() => _ownerId = UserInfo.OwnerId">Just mine</button>
                        </div>
                    }
                    <button class="btn btn-large btn-primary mt-1 ml-1 mb-4 shadow-none" @onclick="() => Reset()">Reset</button>
                </div>
            </div>
        </div>
        @if (ProfileSummaries != null)
        {
            <div class="row gx-5">
                @foreach (ProfileSummary profileSummary in Filtered)
                {
                    <div class="col-lg-4 mb-5" style="cursor: pointer" @onclick="() => Profile(profileSummary.Id)">
                        <div class="card h-100 shadow border-0">
                            <img class="card-img-top" src="@GetImageUri(profileSummary)" alt="Simionic custom profile screen" />
                            <div class="card-body p-4">
                                <h5 class="card-title mb-3">
                                @profileSummary.Name
                                <AuthorizeView>
                                    <Authorized>
                                        @if (UserInfo.OwnerId == profileSummary.Owner.Id) { 
                                            <span><button class="btn-sm btn-primary border-0 float-right shadow-none" @onclick="() => Edit(profileSummary.Id)">Edit</button></span> 
                                        }
                                    </Authorized>
                                </AuthorizeView>
                                </h5>
                                <p class="card-text mb-0"><b>Aircraft type:</b> @profileSummary.AircraftType</p>
                            </div>
                            <div class="card-footer p-4 pt-0 bg-transparent border-top-0">
                                <div class="d-flex align-items-end justify-content-between">
                                    <div class="d-flex align-items-center">
                                        <div class="small">
                                            <div class="text"><b>By:</b> @(profileSummary.Owner.Name ?? "Unknown")</div>
                                            <div class="text"><b>Updated:</b> @profileSummary.LastUpdated</div>                                
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center">
                <h5>Loading...</h5>
                @if (!String.IsNullOrEmpty(_errorMessage))
                {
                    <p class="text-danger">@_errorMessage</p>
                    <p>Try again later, or if this persists, contact <a href="/about">the site admin</a></p>
                }
            </div>
        }
        @if (Filtered?.Count() == 0)
        {
            <div class="text-center">
                <h5>Nothing to see here... try changing the filter.</h5>
            </div>
        }
    </div>
</section>

@code
{
    private AircraftType? _typeFilter;
    private EngineFilter _engineFilter;
    private string _searchTerm;
    private string _ownerId;
    private string _errorMessage;

    public IEnumerable<ProfileSummary> ProfileSummaries { get; set; }
    public IEnumerable<ProfileSummary> Filtered
    {
        get
        {
            if (ProfileSummaries is null) return null;

            IEnumerable<ProfileSummary> output = ProfileSummaries;

            if (!String.IsNullOrWhiteSpace(_searchTerm)) output = output.Where(
                x => x.Name is not null && x.Name.ToLower().Contains(_searchTerm.ToLower()) ||
                x.Owner.Name is not null && x.Owner.Name.ToLower().Contains(_searchTerm.ToLower()) ||
                x.AircraftType.ToString().ToLower().Contains(_searchTerm.ToLower())
            );

            if (_typeFilter.HasValue) output = output.Where(x => x.AircraftType == _typeFilter);

            output = _engineFilter switch
            {
                EngineFilter.Single => output.Where(x => x.IsTwinEngine == false),
                EngineFilter.Twin => output.Where(x => x.IsTwinEngine == true),
                _ => output
            };

            return output;
        }
    }

    protected string GetImageUri(ProfileSummary profileSummary)
    {
        return profileSummary.AircraftType switch
        {
            AircraftType.Piston => "/img/piston.jpg",
            AircraftType.TurboProp => "/img/turboprop.jpg",
            AircraftType.Jet => "/img/jet.jpg",
            _ => ""
        };
    }

    protected void Edit(string id)
    {
        Navigation.NavigateTo($"/edit/{ id }");
    }

    protected void Profile(string id)
    {
        Navigation.NavigateTo($"/profile/{ id }");
    }

    protected string GetButtonState(bool test)
    {
        return test ? "btn-primary" : "btn-secondary";
    }

    protected string GetButtonState(EngineFilter engines)
    {
        if (_engineFilter == engines)
        {
            return "btn-primary";
        }
        else
        {
            return "btn-secondary";
        }
    }

    protected string GetButtonState(AircraftType? type = null)
    {
        if (_typeFilter == type)
        {
            return "btn-primary";
        }
        else
        {
            return "btn-secondary";
        }
    }

    protected void FilterEngine(EngineFilter engines)
    {
        _engineFilter = engines;
    }

    protected void FilterType(AircraftType? type = null)
    {
        _typeFilter = type;
    }

    protected void BackToAll(MouseEventArgs args)
    {
        Navigation.NavigateTo("/profiles");
    }

    protected async Task Reset(bool resetSearch = true)
    {
        try
        {
            ProfileSummaries = await HttpClientFactory.Client.GetFromJsonAsync<ProfileSummary[]>("/api/profiles");
        }
        catch (HttpRequestException ex)
        {
            string statusCode = (ex.StatusCode.HasValue) ? ex.StatusCode.Value.ToString() : "";
            if (String.IsNullOrWhiteSpace(statusCode)) statusCode = "unknown";
            _errorMessage = $"Unable to load profiles. API unavailable. Status code was { statusCode }.";
        }
        catch
        {
            _errorMessage = $"Unable to load profiles. Unknown error.";        
        }

        _typeFilter = null;
        _engineFilter = EngineFilter.Both;
        _ownerId = null;
        if (resetSearch) _searchTerm = null;
    }

    protected override void OnAfterRender(bool firstRender)
    {
        if (Navigation.ToBaseRelativePath(Navigation.Uri).StartsWith("profiles"))
        {
            _ownerId = null;
        }
    }

    protected override async Task OnInitializedAsync()
    {
        if (Navigation.ToBaseRelativePath(Navigation.Uri).StartsWith("myprofiles") && UserInfo.OwnerId == null)
        {
            Navigation.NavigateTo("/");
        }

        var query = QueryHelpers.ParseQuery(Navigation.ToAbsoluteUri(Navigation.Uri).Query);
        StringValues values = String.Empty;
        if (query.TryGetValue("search", out values)) _searchTerm = values.SingleOrDefault()?.ToLower();
        if (query.TryGetValue("ownerid", out values)) _ownerId = values.SingleOrDefault();

        await Reset(false);
    }

    protected enum EngineFilter
    {
        Both, Single, Twin   
    }
}
